<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/3.9.9" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://maven.apache.org/POM/3.9.9 https://maven.apache.org/xsd/maven-3.9.9.xsd">

    <!-- ========== BASIC PROJECT INFORMATION ========== -->
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.example</groupId>
    <artifactId>CustomerSupportAutomation</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>CustomerSupportAutomation</name>

    <!-- ========== PROJECT PROPERTIES ========== -->
    <properties>
        <!-- Basic Java/Maven properties -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <java.version>1.8</java.version> <!-- Adicionada linha para garantir o JDK 8 -->

        <!-- Dependency versions -->
        <protobuf.version>3.21.7</protobuf.version>  <!-- Protocol Buffers version -->
        <grpc.version>1.52.1</grpc.version>          <!-- gRPC version -->
        <guava.version>31.1-jre</guava.version>      <!-- Google Guava version -->
    </properties>

    <!-- ========== PROJECT DEPENDENCIES ========== -->
    <dependencies>
        <!-- Protocol Buffers Core -->
        <dependency>
            <groupId>com.google.protobuf</groupId>
            <artifactId>protobuf-java</artifactId>
            <version>${protobuf.version}</version>
        </dependency>

        <!-- gRPC Dependencies -->
        <dependency>
            <groupId>io.grpc</groupId>
            <artifactId>grpc-netty-shaded</artifactId>  <!-- Netty transport -->
            <version>${grpc.version}</version>
        </dependency>
        <dependency>
            <groupId>io.grpc</groupId>
            <artifactId>grpc-protobuf</artifactId>    <!-- Protobuf integration -->
            <version>${grpc.version}</version>
        </dependency>
        <dependency>
            <groupId>io.grpc</groupId>
            <artifactId>grpc-stub</artifactId>         <!-- gRPC stubs -->
            <version>${grpc.version}</version>
        </dependency>

        <!-- Utilities -->
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>            <!-- Google Core Libraries -->
            <version>${guava.version}</version>
        </dependency>
        <dependency>
            <groupId>javax.annotation</groupId>
            <artifactId>javax.annotation-api</artifactId>  <!-- For @Generated annotations -->
            <version>1.3.2</version>
        </dependency>

        <!-- Logging -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>         <!-- SLF4J API -->
            <version>2.0.16</version>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>   <!-- Logback implementation -->
            <version>1.4.14</version>
        </dependency>

        <!-- Testing -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>  <!-- JUnit 5 API -->
            <version>5.11.4</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-engine</artifactId>  <!-- JUnit 5 Engine -->
            <version>5.11.4</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <!-- ========== BUILD CONFIGURATION ========== -->
    <build>
        <plugins>
            <!-- OS Detection Plugin (helps with protoc download) -->
            <plugin>
                <groupId>kr.motd.maven</groupId>
                <artifactId>os-maven-plugin</artifactId>
                <version>1.7.1</version>
                <executions>
                    <execution>
                        <phase>initialize</phase>  <!-- Run early in build lifecycle -->
                        <goals>
                            <goal>detect</goal>    <!-- Detect OS/architecture -->
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- Protocol Buffers Compiler Plugin -->
            <plugin>
                <groupId>org.xolstice.maven.plugins</groupId>
                <artifactId>protobuf-maven-plugin</artifactId>
                <version>0.6.1</version> <!-- Versão estável 0.6.1 -->
                <configuration>
                    <!-- Limpar diretório de saída antes de gerar novas classes -->
                    <clearOutputDirectory>true</clearOutputDirectory>
                    <!-- Downloads appropriate protoc executable for macOS (Intel or ARM64) -->
                    <protocArtifact>com.google.protobuf:protoc:${protobuf.version}:exe:${os.detected.classifier}</protocArtifact>
                    <!-- Downloads gRPC Java plugin -->
                    <pluginArtifact>io.grpc:protoc-gen-grpc-java:${grpc.version}:exe:${os.detected.classifier}</pluginArtifact>
                    <protoSourceRoot>src/main/proto</protoSourceRoot>
                    <outputDirectory>${project.build.directory}/generated-sources/protobuf/java</outputDirectory>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>compile</goal>          <!-- Compiles .proto to Java -->
                            <goal>compile-custom</goal>   <!-- Compiles gRPC services -->
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- Adds generated sources to compilation path -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>3.3.0</version>
                <executions>
                    <execution>
                        <id>add-generated-sources</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <!-- Protobuf generated Java files -->
                                <source>${project.build.directory}/generated-sources/protobuf/java</source>
                                <!-- gRPC generated Java files -->
                                <source>${project.build.directory}/generated-sources/protobuf/grpc-java</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Java Compiler Plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.13.0</version>
                <configuration>
                    <source>1.8</source>  <!-- Java 8 source compatibility -->
                    <target>1.8</target>  <!-- Java 8 target compatibility -->
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
